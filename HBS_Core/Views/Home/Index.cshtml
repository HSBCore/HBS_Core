@model BOL.Data.staff;
@{
    ViewData["Title"] = "Home Page";
}


<body class="text-center">

    <section class="vh-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 text-black">

                    <div class="d-flex justify-content-center h-custom-2 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                        <form asp-action="Index" style="width: 23rem;">

                            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Please Log in</h3>

                            <div class="form-outline mb-4">
                                <input asp-for="Username" type="text" id="form2Example18" class="form-control form-control-lg" placeholder="Insert User Name" />
                            </div>

                            <div class="form-outline mb-4">
                                <input asp-for="Password" type="password" id="form2Example28" class="form-control form-control-lg" placeholder="Insert Password" />
                            </div>

                            <div class="pt-1 mb-4">
                                <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
                            </div>

                            <p>Don't have an account? <a asp-action="Register" class="link-info">Register here</a></p>

                        </form>

                    </div>

                </div>
                <div class="col-sm-6 px-0 d-none d-sm-block">
                    <img src="~/images/r.jpg" alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
                </div>
            </div>
        </div>
    </section>





</body>