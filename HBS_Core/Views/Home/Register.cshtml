@model BOL.Data.staff;
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h1 class="text-primary">Registration </h1>


<div>

    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center text-bg-primary h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign Up</p>

                                    <form asp-action="Register" class="mx-1 mx-md-4 text-primary fw-bold">
                                        
                                        <div class="form-group" >
                                            <label for="exampleInputEmail1" class="form-label mt-4">Name</label>
                                            <input asp-for="Name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Name">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1" class="form-label mt-4">Job Title</label>
                                            <input asp-for="JobTitle" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Job Title">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1" class="form-label mt-4">Phone</label>
                                            <input asp-for="Phone" type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Phone">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1" class="form-label mt-4">Username</label>
                                            <input asp-for="Username" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Username">

                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1" class="form-label mt-4">Password</label>
                                            <input asp-for="Password" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Password">

                                        </div>


                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 fw-bold">
                                            <button type="submit" value="Create" class="btn btn-primary btn-lg">Register</button>
                                        </div>

                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>