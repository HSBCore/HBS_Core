@model IEnumerable<BOL.Data.Gust>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="container">
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item" role="presentation">
            <a asp-controller="Booking" asp-action="index" class="nav-link"  aria-selected="true" role="tab">Booking</a>
        </li>
        <li class="nav-item" role="presentation">
            <a  asp-controller="Gust" asp-action="index" class="nav-link active"  aria-selected="false" tabindex="-1" role="tab">Guest</a>
        </li>
        <li class="nav-item" role="presentation">
            <a asp-controller="Room" asp-action="index" class="nav-link" aria-selected="false" tabindex="-1" role="tab">Rooms</a>
        </li>
        <li class="nav-item" role="presentation">
            <a asp-controller="RoomClass" asp-action="index" class="nav-link" aria-selected="false" tabindex="-1" role="tab">Room Classes</a>
        </li>
    </ul>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
